# http://editorconfig.org/

# Top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4

[*.tsv]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.sh]
indent_size = 4

[*.sql]
indent_size = 4
